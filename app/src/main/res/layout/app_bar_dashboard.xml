<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.elynn.bitdna.bitchain.DashboardActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@mipmap/ic_add"
        app:backgroundTint="?android:attr/colorPrimary"
        app:srcCompat="@mipmap/ic_add"
        app:rippleColor="?android:attr/colorBackgroundFloating" />

    <TextView
        android:text="Galery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/lblGalery"
        android:layout_marginBottom="97dp"
        android:layout_marginEnd="80dp"
        android:paddingTop="-1dp"
        android:paddingLeft="15dp"
        android:paddingBottom="-1dp"
        android:paddingRight="15dp"
        android:background="@drawable/ic_shadow_text"
        android:visibility="gone"
        android:gravity="bottom|end" />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabgalery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@mipmap/ic_add"
        app:backgroundTint="?android:attr/colorButtonNormal"
        app:srcCompat="@drawable/ic_menu_gallery"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="22dp"
        android:visibility="gone"
        tools:visibility="gone"
        app:fabSize="mini" />

    <TextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:text="Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/lblCamera"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="80dp"
        android:visibility="gone"
        android:paddingTop="-1dp"
        android:paddingLeft="15dp"
        android:paddingBottom="-1dp"
        android:paddingRight="15dp"
        android:background="@drawable/ic_shadow_text"
        android:gravity="bottom|end"
        android:foreground="@drawable/fab_textview" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabcamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@mipmap/ic_add"
        app:backgroundTint="?android:attr/colorButtonNormal"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_marginBottom="145dp"
        android:layout_marginEnd="22dp"
        android:visibility="gone"
        app:fabSize="mini" />
    <include layout="@layout/content_dashboard" />

</android.support.design.widget.CoordinatorLayout>
